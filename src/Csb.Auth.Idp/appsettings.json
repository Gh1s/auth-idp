{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "ElasticSearch": {
      "IndexFormat": "idp-{0:yyyy.MM}"
    }
  },
  "Localization": {
    "DefaultCulture": "fr-FR",
    "SupportedCultures": [
      "en",
      "fr"
    ]
  },
  "Auth": {
    "ShowDebug": false,
    "RememberForSeconds": 86400,
    "Scopes": {
      "profile": [
        "preferred_username",
        "given_name",
        "family_name",
        "name",
        "picture"
      ],
      "email": [
        "email",
        "email_verified"
      ],
      "phone_number": [
        "phone_number",
        "phone_number_verified"
      ]
    }
  },
  "Hydra": {
    "AdminApi": {
      "HealthEndpoint": "/health/alive"
    },
    "PublicApi": {
      "HealthEndpoint": "/health/alive"
    }
  }
}
